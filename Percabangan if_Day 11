public class Main {
    
    public static void main(String[] args) {
        double total = 100000;
        System.out.println("Belanja = Rp" + total);
        if (total >= 100000) {
            System.out.println("Anda dapat diskon 10%");
            double diskon = 10*total / 100;
            total -= diskon;
        }
        System.out.print("total harga = Rp" + total);
    }
    
}
